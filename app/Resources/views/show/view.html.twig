{% extends "show/base.html.twig" %}

{% block title %}
    Create new show
{% endblock %}

{% block content %}
    <div class="card mb-4">
        <img class="card-img-top" src="{{ asset('uploads/picture_show/'~show.getPathMainPicture()) }}" alt="Card image cap">
        <div class="card-body">
            <h2 class="card-title">{{ show.getName() }}</h2>
            <div class="categories">
                {% for category in show.getCategories() %}
                    {{ category.getName() }},
                {% endfor %}
            </div>
        </div>
        <div class="card-footer text-muted d-flex flex-column">
            Published on {{ show.getPublishedDate()|date('d/m/Y') }} by
            <a href="#">{{ show.getAuthor() }}</a>

            <a href="/show/{{ show.getId() }}/update" class="btn align-self-end btn-outline-dark">Update</a>
        </div>
    </div>
    </div>
{% endblock %}


 {% block search %}
     <!-- Sidebar Widgets Column -->
     <div class="col-md-4">

         <!-- Search Widget -->
         <div class="card my-4">
             <h5 class="card-header">Search</h5>
             <div class="card-body">
                 <div class="input-group">
                     <input type="text" class="form-control" placeholder="Search for...">
                     <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
                 </div>
             </div>
         </div>

         {{ render(controller("AppBundle\\Controller\\ShowController::categoriesAction")) }}

         <!-- Side Widget -->
         <div class="card my-4">
             <h5 class="card-header">Side Widget</h5>
             <div class="card-body">
                 You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
             </div>
         </div>

     </div>

 {% endblock %}